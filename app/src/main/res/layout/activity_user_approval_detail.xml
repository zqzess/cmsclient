<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户审批"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="用户类型"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:id="@+id/list_detil_type"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textSize="22sp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:id="@+id/list_detil_userid"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="姓名"

            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:id="@+id/list_detil_username"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="电话"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:id="@+id/list_detil_phone"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutClass"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="班级"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:id="@+id/list_detil_class"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_detail_pass"
            android:text="通过" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_detail_notpass"
            android:text="不通过" />
    </LinearLayout>

</LinearLayout>